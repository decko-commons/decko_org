namespace :deploy do
  desc "restart yard server"
  after :published, :restart_yard_server do
    on roles(:app) do
      within "#{release_path}/vendor/decko" do
        execute "pgrep -f 0.0.0.0:8808 | xargs kill -9"
        execute :rvm, :default, :do, "yard server -d" 
      end
    end
  end
end
